-extends "base.html"
-block content
	%form{action: '.', method: 'POST'}
		.title title
			= form.title
		.desc desc
			= form.desc
		.order order
			= form.order
		.ref ref
			= form.ref
		.obj obj
			= form.obj
		%input{type: 'submit'}

	-for step in steps
		.id {{ step._id }}
		%h1 {{ step.title }}
		%h2	{{ step.desc }}
		%pre {{ step.obj }}
		-for substep in step.substeps
			.id {{ substep._id }}
			%h1 {{ substep.title }}
			%h2	{{ substep.desc }}
			%pre {{ substep.obj }}